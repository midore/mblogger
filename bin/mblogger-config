module Mblogger

  module Config

    def data_dir
     '/path/to/your-data-directory/'
    end

    def xid
      'your BlogID'
    end

    def ac
      'your account'
    end

    def pw
      'your password'
    end

    def xname
      'your_appname'
    end

  end

end

$MBLOGGER = Mblogger::Config

